{
  "name": "logdash/php-sdk",
  "description": "Modern observability platform SDK for PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Logdash Team",
      "email": "logdash.contact@gmail.com"
    }
  ],
  "keywords": [
    "observability",
    "monitoring",
    "logging",
    "tracing",
    "metrics"
  ],
  "homepage": "https://github.com/logdash-io/php-sdk",
  "require": {
    "php": ">=8.2",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Logdash\\": "src/"
    },
    "files": [
      "src/Sync/CreateLogSync.php",
      "src/Metrics/CreateMetrics.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Logdash\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "cs": "phpcs",
    "cbf": "phpcbf",
    "qa": {
      "Codestyle": "@cs",
      "Static analyse": "@phpstan",
      "Tests": "@test"
    },
    "qa:fix": {
      "Codestyle": "@cbf"
    }
  }
}
